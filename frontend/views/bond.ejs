<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Bonds</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">List of Bonds</h1>

        <ul class="list-group mb-4">
            <% if (bonds && bonds.length > 0) { %>
                <% bonds.forEach(function(bond) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong><%= bond.bondname %></strong> - <%= bond.abbreviation %> - $<%= parseFloat(bond.currentprice).toFixed(2) %>
                        </div>
                        <form action="/bonds/<%= bond.id %>?_method=DELETE" method="POST" class="mb-0">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="list-group-item">No bonds available</li>
            <% } %>
        </ul>

        <!-- Add Bond Button -->
        <div class="text-center mb-3">
            <a href="/bonds/add" class="btn btn-primary">Add New Bond</a>
        </div>

        <!-- Back to Home Button -->
        <div class="text-center">
            <a href="/" class="btn btn-success">Back to Home</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
