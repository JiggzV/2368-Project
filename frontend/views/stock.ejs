<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Stocks</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">List of Stocks</h1>
        
        <!-- Stocks List -->
        <ul class="list-group mb-4">
            <% if (stocks && stocks.length > 0) { %>
                <% stocks.forEach(function(stock) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong><%= stock.stockname %></strong> - <%= stock.abbreviation %> - $<%= parseFloat(stock.currentprice).toFixed(2) %>
                        </div>
                        <form action="/stocks/<%= stock.id %>?_method=DELETE" method="POST" class="mb-0">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="list-group-item">No stocks available</li>
            <% } %>
        </ul>

        <!-- Add Stock Button -->
        <div class="text-center mb-3">
            <a href="/stocks/add" class="btn btn-primary">Add New Stock</a>
        </div>
        
        <!-- Back to Home Button -->
        <div class="text-center">
            <a href="/" class="btn btn-success">Back to Home</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
